def choose1():
   choose1=(input("you've choosed rtv/agd \n 1.fridge \n 2.TV \n 3.dishwasher\n 0.quit \n"))
   match choose1:
                case "0":
                    return shopping_list
                    
                case "1":
                    p=int(input("how many?"))
                    if p >0:
                        ammount=str(p)
                        shopping_list.append("fridge: "+ammount)
                        return shopping_list
                case "2":
                    p=int(input("how many?"))
                    if p >0:
                        ammount=str(p)
                        shopping_list.append("tv: "+ammount)
                        return shopping_list
                case "3":
                    p=int(input("how many?"))
                    if p >0:
                        ammount=str(p)
