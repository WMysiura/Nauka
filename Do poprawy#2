from itertools import count
#algorytm zakup√≥w online
shopping_list=[]
i=0

while i ==0:
    answer1=int(input("WELCOME IN SHOP \n What you want to buy? \n 0.exit \n 1.fridge \n 2.apple \n 3.cucumber \n 4.orange juice \n 5.hamster\n"))
    match answer1:
        case 0:
            break
        case 1:
            ammount=(input("how many? "))
            shopping_list.append("fridge"*ammount )
            
        case 2:
                ammount=int(input("how many?"))

        case 3:
                ammount=int(input("how many?"))
                shopping_list.append("cucumber "*ammount)
                o=shopping_list.count("cucumber")
        case 4:
                ammount=int(input("how many?"))
                shopping_list.append("orange juice "*ammount)
                o=shopping_list.count("orange juice")
        case 5:
                ammount=int(input("how many?"))
                shopping_list.append("hamster "*ammount)
                o=shopping_list.count("hamster")
            
      
        
print(shopping_list)
